{
  "name": "clawchat",
  "version": "1.0.0",
  "description": "ClawChat - Voice + Chat + Notes assistant powered by Claude & OpenAI",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "dev": "node src/server.js",
    "start": "node src/server.js",
    "build": "npm run build:js && npm run build:css",
    "build:js": "esbuild public/app.js --bundle --minify --outfile=public/app.bundle.js --format=esm",
    "build:css": "cleancss -o public/styles/main.min.css public/styles/main.css",
    "check": "node --check src/server.js",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "keywords": [
    "voice",
    "chat",
    "assistant",
    "claude",
    "openai",
    "realtime"
  ],
  "author": "Parth Dhawan",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "mammoth": "^1.11.0",
    "pdf-parse": "^2.4.5",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "esbuild": "^0.27.2",
    "terser": "^5.46.0"
  }
}
